<?xml version="1.0" encoding="utf-8"?>
<!--群组设置项的集合  抽取的View 类 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:gravity="center_vertical"
              android:background="@drawable/btn_style_red_delete"
              android:minHeight="@dimen/android_width_178"
              android:orientation="vertical"
              android:paddingLeft="@dimen/android_width_20"
              android:paddingRight="@dimen/android_width_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="98dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/android_width_178"
            >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/android_width_110"
                android:layout_height="@dimen/android_width_110"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/group_default_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon"
                android:orientation="vertical"
                android:paddingLeft="@dimen/android_width_20">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textSize="@dimen/android_text_size_16"
                        tools:text="dssfs:"/>

                    <ImageView
                        android:id="@+id/level_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_20"
                        android:scaleType="fitXY"
                        android:src="@drawable/level_icon"
                        />

                    <TextView
                        android:id="@+id/level_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_10"
                        android:layout_toRightOf="@+id/lv"
                        android:gravity="center"
                        android:textSize="@dimen/android_text_size_12"
                        tools:text="dfsfsfs"/>

                    <ImageView
                        android:id="@+id/manager_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_20"
                        android:scaleType="fitXY"
                        android:src="@drawable/managemer_icon"/>

                    <TextView
                        android:id="@+id/manager_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_10"
                        android:gravity="center"
                        android:textSize="@dimen/android_text_size_12"
                        tools:text="dfsfsfs"/>
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textSize="@dimen/android_text_size_12"
                    tools:text="fdfsfsd"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账号："
                        android:textColor="@color/android_ciyao_text_color"
                        android:textSize="@dimen/android_text_size_12"/>

                    <TextView
                        android:id="@+id/account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="@dimen/android_width_10"
                        android:maxLength="25"
                        android:singleLine="true"
                        android:textColor="@color/android_ciyao_text_color"
                        android:textSize="@dimen/android_text_size_12"
                        tools:text="sdf"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:visibility="visible"
                    tools:text="name"/>

                <ImageView
                    android:layout_marginLeft="@dimen/android_width_20"
                    android:id="@+id/qrcode"
                    android:visibility="visible"
                    android:layout_width="@dimen/android_width_46"
                    android:layout_height="@dimen/android_width_46"
                    android:scaleType="fitXY"
                    android:src="@drawable/qrcode_default"/>

                <ImageView
                    android:id="@+id/next_page"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/android_width_20"
                    android:scaleType="centerInside"
                    android:src="@drawable/next_page_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>