<?xml version="1.0" encoding="utf-8"?>
<!--创建群组的输入群组名称的编辑EditTextView的背景选择器 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
    <shape android:shape="rectangle"
           xmlns:android="http://schemas.android.com/apk/res/android">
        <stroke android:color="@color/red_btn_color_normal"
                android:width="1dp"
            />
        <solid android:color="@android:color/white"/>
        <corners android:topLeftRadius="@dimen/dialog_round_radius" android:topRightRadius="@dimen/dialog_round_radius" android:bottomLeftRadius="@dimen/dialog_round_radius" android:bottomRightRadius="@dimen/dialog_round_radius" />
    </shape>
</item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
            <stroke android:width="1dp"
                    android:color="@android:color/darker_gray"
                />
            <solid android:color="@android:color/white"/>
            <corners android:bottomLeftRadius="@dimen/dialog_round_radius" android:bottomRightRadius="@dimen/dialog_round_radius" android:topLeftRadius="@dimen/dialog_round_radius" android:topRightRadius="@dimen/dialog_round_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
               xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:color="@android:color/darker_gray"
                    android:width="1dp"
                />
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="@dimen/dialog_round_radius" android:topRightRadius="@dimen/dialog_round_radius" android:bottomLeftRadius="@dimen/dialog_round_radius" android:bottomRightRadius="@dimen/dialog_round_radius" />
        </shape>
    </item>
</selector>
