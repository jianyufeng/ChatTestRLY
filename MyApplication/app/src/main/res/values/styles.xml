<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--聊天-->
    <style name="ChattingUIContent">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--ecprogress dialog-->
    <style name="Theme_Light_CustomDialog_Blue" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/bg_common_toast</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <!--ecalert dialog-->
    <style name="Theme.Light.FullScreenDialogAct" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff555555</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="DialogButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:minHeight">45.0dip</item>
        <!--<item name="android:textColor">@color/btn_dialog</item>-->
    </style>

    <style name="DialogButton.Left" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_left</item>
    </style>

    <style name="DialogButton.Right" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_right</item>
    </style>

    <style name="DialogButton.Center" parent="@style/DialogButton">
        <item name="android:background">@drawable/btn_dialog_center</item>
    </style>
    <!--ec list dialog-->
    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="DialogTitle" parent="@style/ShadowedText">
        <item name="android:textColor">#ff169aff</item>
    </style>
    <!--创建群组界面的确定按钮-->
    <style name="common_btn">
        <item name="android:textSize">@dimen/android_text_size_16</item>
        <item name="android:textColor">@color/android_bai_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/android_width_88</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginLeft">@dimen/android_width_20</item>
        <item name="android:layout_marginRight">@dimen/android_width_20</item>
    </style>

    <!--分割线-->
    <style name="tv_line">
        <item name="android:layout_height">@dimen/android_divider_width</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red_btn_color_normal</item>
    </style>

    <!--  创建群组的选择群组图像  -->
    <style name="select_pic_popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/select_pic_popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/select_pic_pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
</resources>
